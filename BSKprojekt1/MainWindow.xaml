<Window x:Class="BSKprojekt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSKprojekt1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="353*"/>
        </Grid.ColumnDefinitions>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="270.381,309,0,0" VerticalAlignment="Top" Width="100" ValueChanged="ProgressBar_ValueChanged" Grid.Column="1"/>
        <TextBox x:Name="InputFileTextBox" HorizontalAlignment="Left" Height="23" Margin="18,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="638" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Wybierz plik do zaszyfrowania" HorizontalAlignment="Left" Margin="18,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="SelectInputFileButton" Content="Wybierz plik" HorizontalAlignment="Left" Margin="595,41,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.315,0.824" Click="SelectInputFileButton_Click" Grid.Column="1"/>
        <ScrollBar HorizontalAlignment="Left" Margin="511.381,207,0,0" VerticalAlignment="Top" Height="11" RenderTransformOrigin="0.5,0.5" Width="8" Grid.Column="1">
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <Slider HorizontalAlignment="Left" Margin="595.381,208,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="textBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="18,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
        <Label x:Name="label1" Content="Wybierz nazwę pliku wynikowego" HorizontalAlignment="Left" Margin="18,86,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="188"/>

    </Grid>
</Window>
